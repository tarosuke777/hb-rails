= form_with(model: post) do |form|
  - if post.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - post.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :title, style: "display: block"
    = form.text_field :title, class: "w-full border border-gray-400 p-2 rounded-md"
  %div
    = form.label :content, style: "display: block"
    = form.textarea :content, class: "w-full min-h-64 border border-gray-400 p-2 rounded-md"
  %div
    = form.label :posted_at, style: "display: block"
    = form.datetime_select :posted_at, { :default => Time.current }, class: "inline-block border border-gray-400 p-2 rounded-md"
  %div
    = form.submit class: "mt-3 bg-black text-white py-2 px-4 rounded-lg"
